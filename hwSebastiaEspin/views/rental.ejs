  <body class="bg-light">

<div class="container">
  <main>
    <div class="row g-5">
      <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Your cart</span>
          <span class="badge bg-primary rounded-pill">1</span>
        </h4>
         <form class=""  action="/rental/<%-movie.MOVIE_ID%>/<%-movie.PRICE%>" method="post">
        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0"> <%-movie.MOVIE_TITLE%> </h6>
              <small class="text-muted"><%-movie.GENRE%></small>
            </div>
            <span class="text-muted" id="value"><%-movie.PRICE%></span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0"> Discount </h6>
              <small class="text-muted">for movies older than 5 years</small>
            </div>
            <span class="text-muted"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div class="col-12">
              <h6 class="my-0"> select the number of days </h6>

              <label for="Date" class="form-label"></label>
              <select class="form-select" name="days" onchange="price(this)">
                <option value="">choose</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
              </select>
              <div class="invalid-feedback">
                Please enter a date
              </div>
            </div>
          </li>




          <li class="list-group-item d-flex justify-content-between">
            <span>Total (USD) <p id='costt'></p> </span>
            <input class="form-control" type="text" name="cost" id="cost" value="" disabled>
          </li>
        </ul>


          <div class="input-group">
            <input type="text" class="form-control" placeholder="Promo code">
            <button type="submit" class="btn btn-secondary">Rent</button>
          </div>
        </form>
      </div>


    </div>
  </main>


</div>


